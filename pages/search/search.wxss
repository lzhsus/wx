/* pages/main/main.wxss */
.search{
  width: 100%;
  height: 100rpx;
  background-color: #1296db;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.search .img{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 28rpx;
  left: 40rpx;
}
.search input{
  width: 84%;
  background-color: rgba(160, 226, 235, 0.3);
  border-radius: 10rpx;
  height: 70rpx;
  color: #fff;
  padding-left: 90rpx;
  box-sizing: border-box;
}
.search text{
  color: #fff;
  padding: 0 10rpx;
}
.searchNew{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:40rpx;
}
.searchNew .img{
  width: 40rpx;
  height: 40rpx;
}
.searchNew text{
  display: block;
  width: 100%;
  color: #ccc;
  text-align: left;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.search-input-body{
  width: 100%;
}
.search-input-body text{
  display: block;
  float: left;
  padding: 8rpx 14rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  margin: 10rpx;
  color: rgb(49, 47, 47);
  font-size: 32rpx;
}