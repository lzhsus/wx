/* pages/classify/classify.wxss */
/* 页面头部 */
.header-top{
 box-sizing: border-box;
  width: 100%;
  padding:20rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(230, 226, 226,0.5);
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 2;
}
.address::after{
  display: block;
  clear: both;
  content: ''
}
.address-index{
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.address-txt{
  font-size: 32rpx;
  line-height: 50rpx;
  height: 50rpx;
  float: left;
  display: block;
  width: 270rpx;
  /* background-color: red; */
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-input{
  padding-left: 20rpx;
  width: 260rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 24rpx;
}
/* 商品分类 */
.classify-shop{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 90rpx;
  left: 0;
  z-index: 1;
}
.classify-sort{
width: 26%;
background-color: rgba(200, 200, 200, 0.1);
border-right: 1px solid #999;
}
.classify-sort-name{
  box-sizing: border-box;
  margin-bottom: 2rpx;
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  padding-left: 10rpx;
  background-color:  rgba(200, 200, 200, 0.2);
}
.classify-content{
  width: 74%;
}
/* 具体内容 */
.classify-sort-left{
  width: 100%;
  /* height: 100rpx; */
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  text-align: left;
  color: rgb(66, 65, 65);
  font-size: 30rpx;
}
.classify-sort-left.active{
  border-left: 10rpx solid #1296DB;
  color: #1296DB;
  width: 100%;
  background-color: #fff;
}
/* 商品的列表 */
.classify-content-body{
  width: 96%;
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;

}
.classify-content-img{
  width: 300rpx;
  height: 200rpx;
  position: relative;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.classify-content-img text{
  font-size: 24rpx;
  display: block;
  width: 60rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  position: absolute;
  padding: 6rpx 10rpx;
  top: 0;
  left: 20rpx;
  color: #fff;
  background-color: rgb(241, 86, 86);
}
.classify-content-img image{
height: 100%;
  width: 100%;
}
.classify-content-tit-msg{
  width: 100%;
  text-align: left;
}
.classify-content-tit{
  font-size: 32rpx;
  color: rgb(83, 75, 75);
  height: 84rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  line-clamp: 2
}
/* 价钱 添加购物车 */
.classify-content-msg::after{
  display: block;
  clear: both;
  content: ""
}
.classify-content-msg{
  margin-top: 70rpx;
}
.classify-content-msg text:nth-of-type(1){
  color: red;
  font-size: 36rpx;
  float: left;
}
.classify-content-msg text:nth-of-type(2){
  float: right;
  font-size: 24rpx;
  padding:1rpx 8rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: rgb(255, 81, 0)
}