/* pages/products/products.wxss */
swiper{
  height: 460rpx;
}
.moneyMsg{
  text-align: center;
  padding: 0 20rpx;
}
.moneyMsg>view:nth-of-type(1){
font-size: 32rpx;
color: #999;
margin-top: 40rpx;
}
.moneyMsg>view:nth-of-type(2){
font-size: 30rpx;
color: rgb(121, 120, 120);
margin: 20rpx ;
}
.moneyMsg>view:nth-of-type(3){
font-size: 40rpx;
color: rgb(247, 76, 9);
}
.issue{
  width: 30rpx;
  height: 30rpx;
}
.store{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  float: left;
}
.activity{
  font-size: 30rpx;
  color: #000;
  padding: 20rpx 0;
}
.activity text{
  padding:0 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1rpx solid rgb(243, 113, 62);
  margin-right: 20rpx;
  color:  rgb(243, 113, 62);
}
.moneyMsg-store{
  font-size: 32rpx;
  color: #999;
  margin: 20rpx 0;
}
.moneyMsg-name{
  padding: 0 20rpx;
}
.addShopMsg{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-top: 1rpx solid #ccc;
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
}
.addShopMsg>view:nth-of-type(1){
  width: 60rpx;
  height: 60rpx;
  position: relative
}
.addShopMsg image{
  width: 100%;
  height: 100%;
}
.addShopMsg>view:nth-of-type(1) text{
  position: absolute;
  top: 0;
  right: 0rpx;
  font-size: 18rpx;
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 50%;
  background-color: rgb(52, 148, 226);
}
.addShopMsg>view:nth-of-type(2){
  padding-left: 20rpx;
  width: 300rpx;
  border-left: 1px solid #ccc;
  font-size: 28rpx;
  color: rgb(49, 48, 48);
}
.addShopMsg>view:nth-of-type(3){
  width: 240rpx;
  padding: 18rpx;
  background-color: rgb(67, 148, 214);
  color: #fff;
  text-align: center;
  border-radius: 60rpx;
}
