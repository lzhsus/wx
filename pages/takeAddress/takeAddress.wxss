/* pages/takeAddress/takeAddress.wxss */
.takeaddress{
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding:20rpx 40rpx;
  background-color: rgba(233, 223, 223, 0.1);
  border-bottom: 1rpx solid #ccc;
}
.address{
  font-size: 28rpx;
  color: rgb(116, 100, 100);
}
.addMag{
  width: 100%;
  text-align: left
}
.addMag text{
  margin:0 40rpx;
}
.change{
  width: 40rpx;
  height: 40rpx;
}
.change image{
  width: 100%;
  height: 100%;
}
.addAddress{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgb(16, 175, 214);
  font-size: 40rpx;
}
.img{
  width: 120rpx;
  height: 120rpx;
  margin:100rpx auto 0;
}
.img image{
  width: 100%;
  height: 100%;
}
.text{
  width: 100%;
  display: block;
  text-align: center;
  color: #000;
  font-size: 34rpx;
  margin: 200rpx auto
}